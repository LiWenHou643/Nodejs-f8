<div class='bg-dark h-100'>
    <div class='row w-100'>

        {{#each course}}
        <div class='col-sm-6 col-lg-4 col-xxl-3 mt-4'>
            <div class='card' style='width: 18rem;'>
                <img src='{{this.thumbnail}}' class='card-img-top' alt='...' />
                <div class='card-body'>
                    <div class='d-flex justify-content-center'>
                        <h5 class='card-title'>{{this.name}}</h5>
                    </div>
                    <div class='d-flex justify-content-center text-center' style='height: 70px'>
                        <p class='card-text'>{{this.description}}</p>
                    </div>
                    <div class='d-flex justify-content-center mt-3'>
                        <a href='/course/{{this.slug}}' class='btn btn-primary px-4'>See detail</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>

    
</div>