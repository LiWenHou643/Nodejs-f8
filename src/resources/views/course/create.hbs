<div class="container">
    <h1 class="my-4">Create new course</h1>
    <form method="POST" action="/course/store">
        <div class="mb-3">
            <label for="name" class="form-label">Course name</label>
            <input type="text" class="form-control" id="courseName" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Desciption</label>
            <textarea class="form-control" id="description" name="description"></textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Level</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>